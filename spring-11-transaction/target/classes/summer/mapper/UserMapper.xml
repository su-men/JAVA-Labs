<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="summer.mapper.UserMapper">
    <select id="selectUser" resultType="user" >
        select * from db_login.user;
    </select>

    <insert id="addUser" parameterType="user">
        insert into db_login.user (id, login_name, user_name, password, sex, email, address) value (#{id}, #{loginName}, #{userName}, #{password}, #{sex}, #{email}, #{address});
    </insert>

    <delete id="deleteUser" parameterType="int">
        delete from db_login.user where id=#{id};
    </delete>
</mapper>